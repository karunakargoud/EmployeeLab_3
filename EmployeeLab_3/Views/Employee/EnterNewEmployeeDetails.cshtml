
@{
    ViewBag.Title = "EnterNewEmployeeDetails";
}

<h2>Enter New Employee Details</h2>
<form method="Post" action="SaveEmployeeDetails">
    <table>
        <tr>
            <th>Employee Id</th>
            <td>
                <input type="text"
                       id="EmployeeId"
                       name="EmployeeId" />
            </td>
        </tr>
        <tr>
            <th>Employee Name</th>
            <td>
                <input type="text"
                       id="EmployeeName"
                       name="EmployeeName" />
            </td>
        </tr>
        <tr>
            <th>Designation</th>
            <td>
                <input type="text"
                       id="Designation"
                       name="Designation" />
            </td>
        </tr>
        <tr>
            <th>age</th>
            <td>
                @*<input type="text"
                       id="age"
                       name="age"
                       />*@
                <select name="age" id="age">
                    <option>20-25</option>
                    <option>25-30</option>
                    <option>30-35</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>Salary</th>
            <td>
                <input type="text"
                       id="Salary"
                       name="Salary" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="button"
                       value="Clear" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit"
                       value="Add New Product" />
            </td>
        </tr>
    </table>

</form>

